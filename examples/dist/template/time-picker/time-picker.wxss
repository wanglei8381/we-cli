/**index.wxss**/
.pull-left{
  float: left;
}
.pull-right{
  float: right;
}
.picker-container{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  visibility: hidden;
}
.picker-container.open{
  z-index: 2;
  visibility: visible;
}
.picker-mask{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.4);
}
.picker-wrapper{
  position: fixed;  
  bottom: 0;
  left: 0; 
  width: 100%;
  height: 450rpx;
  z-index: 1;  
  background: #fff;
}
.picker-wrapper .btn{
  padding: 0 45rpx;
  font-size: 30rpx;
  color: #959595;
  line-height: 50rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.picker-wrapper .btn .pull-right{
  color: #316CCB;
}
/*picker-view*/
picker-view{
  position: fixed;  
  bottom: 0;
  left: 0;
  width: 100%; 
  height: 400rpx;
}

picker-view-column view{
  display: flex;
  align-items: center;
  line-height: 30rpx;
  justify-content:center;
}